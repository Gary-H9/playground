{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "repositories": [
    "Gary-H9/playground"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ruby"
      ],
      "depType": "dev",
      "rangeStrategy": "auto",
      "updateTypes": [
        "minor",
        "patch"
      ],
      "automerge": false,
      "enabled": true
    }
  ]
}
